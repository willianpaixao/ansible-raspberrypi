global:
  scrape_interval:     15s
  evaluation_interval: 30s

rule_files:
  - alert.rules.yml

  alertmanagers:
  - static_configs:
    - targets:
      - 'localhost:9093'

scrape_configs:
  - job_name: 'node'
    static_configs:
    - targets: ['192.168.0.3:9100', '192.168.0.4:9100', '192.168.0.5:9100', '192.168.0.8:9100']
